<?xml version="1.0" encoding="utf-8"?>



<resources>

    <style name="tiktok_button_red" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/red_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@drawable/button_state_list_anim</item>
    </style>

    <style name="tiktok_button_transparent" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/normal_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@drawable/button_state_list_anim</item>
    </style>


    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/royal_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">5dp</item>
        <!--
        <item name="android:button">@style/AlertDialogButton</item>
        -->
    </style>

    <style name="AlertDialogButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/royal_purple</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>